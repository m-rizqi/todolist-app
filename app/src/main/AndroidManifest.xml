<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rizqi.todolistapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ToDoListApp">
        <activity
            android:name=".ui.view.HomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ToDoListApp.NoActionBar" />
        <activity
            android:name=".ui.view.AuthActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ToDoListApp.NoActionBar" />
        <activity
            android:name="com.rizqi.todolist.ui.view.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ToDoListApp.NoActionBar" />
        <activity
            android:name="com.rizqi.todolist.ui.view.SplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>